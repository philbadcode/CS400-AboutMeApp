<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Contact Form" icon="" />
    <ScrollView class="p-4">
        <StackLayout class="mb-4">
            <Label text="Name" class="text-lg mb-1" />
            <TextField hint="Enter your name" class="border rounded p-2" id="name" />
        </StackLayout>

        <StackLayout class="mb-4">
            <Label text="Email" class="text-lg mb-1" />
            <TextField hint="Enter your email" class="border rounded p-2" id="email" keyboardType="email" />
        </StackLayout>

        <StackLayout class="mb-4">
            <Label text="Contact Message" class="text-lg mb-1" />
            <TextView hint="Enter your message" class="border rounded p-2" id="message" />
        </StackLayout>

        <Button text="Submit" tap="onSubmit" class="bg-blue-500 text-white py-2 px-4 rounded" />
    </ScrollView>
</Page>
