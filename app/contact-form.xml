<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="bg-black-900 text-white p-4">
    <ActionBar title="Contact Form" icon="" class="text-white" />
    <ScrollView>
        <StackLayout>
            <Label text="Name" class="text-white font-bold mb-1 ml-4" />
            <TextField hint="Enter your name" id="name" class="bg-white text-black mb-4 p-2 rounded" />

            <Label text="Email" class="text-white font-bold mb-1 ml-4" />
            <TextField hint="Enter your email" id="email" keyboardType="email" class="bg-white text-black mb-4 p-2 rounded" />

            <Label text="Contact Message" class="text-white font-bold mb-1 ml-4" />
            <TextView hint="Enter your message" id="message" class="bg-white text-black mb-4 p-2 rounded" />

            <Button text="Submit" tap="onSubmit" class="button-primary mb-2 rounded text-xl" style="background-color: #FF5722; color: #FFFFFF;" />
        </StackLayout>
    </ScrollView>
</Page>
