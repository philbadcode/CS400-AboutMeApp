<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Contact Form" icon="" />
    <ScrollView>
        <StackLayout>
            <Label text="Name" />
            <TextField hint="Enter your name" id="name" />

            <Label text="Email" />
            <TextField hint="Enter your email" id="email" keyboardType="email" />

            <Label text="Contact Message" />
            <TextView hint="Enter your message" id="message" />

            <Button text="Submit" tap="onSubmit" />

            <Image src="res://your_image_file_name" stretch="aspectFit" height="200" />
        </StackLayout>
    </ScrollView>
</Page>